<div class="event-card">
  <%= link_to event.title, event, class: "event-card-title" %>

  <div class="event-card-host">Hosted by <%= link_to event.creator.name, event.creator %></div>

  <div class="event-card-date"><%= event.date %></div>

  <div class="event-card-attendee-count">Attendees: <%= event.attendees.count %></div>

  <div class="event-card-description"><%= event.description %></div>
</div>
