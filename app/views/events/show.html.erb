<h1><%= @event.title %></h1>
<p><%= @event.description %></p>
<p>Event created by: <%= @event.creator.name %></p>

<% if user_logged_in? %>
  <% if @event.attendees.where(id: current_user.id).any? %>
    <%= link_to "Cancel Attendance", event_attendance_path(event_id: @event.id, attendee_id: current_user.id), method: :delete %>
  <% else %>
    <%= link_to "Attend Event", event_attendances_path(event_id: @event.id, attendee_id: current_user.id), method: :post %>
  <% end %>
<% end %>

<%= link_to "<< All Events", root_path %>
