<div class="centered-container">
  <h1>Log In</h1>
  <%= form_with url: sessions_path do |form| %>
    <div class="field">
      <%= form.label :name, "Username" %>
      <%= form.text_field :name %>
    </div>

    <div class="actions">
      <%= form.submit "Log In"%>
    </div>
  <% end %>
</div>
